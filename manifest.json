{
  "manifest_version": 2,
  "name": "worder",
  "version": "0.1.0",
  "author": "treelite <c.xinle@gmail.com>",
  "background": {
    "scripts": ["main.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "打开单词本"
  },
  "permissions": ["storage", "tabs"],
  "content_scripts": [
    {
      "matches": ["http://dictionary.cambridge.org/dictionary/learner-english/*"],
      "js": ["src/worder.js"],
      "css": ["src/worder.css"]
    }
  ]
}
